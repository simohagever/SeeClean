<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/reg_beach"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UI.Camera.Camera">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id">

    </TextView>

    <Button
        android:layout_width="39dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"

        android:id="@+id/navigation"
        android:background="@drawable/baseline_menu_24"></Button>


    <ImageView
        android:layout_below="@+id/id"

        android:id="@+id/Iview"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:src="@drawable/picture"></ImageView>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/btnNavigation"
        android:layout_width="190dp"

        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="90dp"


        app:menu="@menu/main_menu" />

    <EditText
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:hint="description"
        android:textSize="20dp"
        android:layout_below="@+id/Iview"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="31dp"
        android:textColor="@color/white"
        android:text=" "
        android:textSize="20dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginLeft="120dp"
        android:layout_below="@id/time"
        android:text=" "
        android:textDirection="ltr"
        android:layoutDirection="ltr"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_gravity="center"
        ></TextView>


    <Button
        android:id="@+id/btnSend"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="34dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="100dp"
        android:layout_marginEnd="151dp"
        android:background="@color/simo"
        android:text="send"></Button>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="155dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/btnSend"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_gravity="center"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="152dp"
        android:background="@color/simo"
        android:text="cancel"></Button>


</RelativeLayout>