<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/junior"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SelectReport.SelectNewReport">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"

        android:id="@+id/imageMarker"
        >
    </ImageView>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="20dp"
      android:text="dsadasdasd"
        android:textColor="@color/white"></TextView>
    <TextView
        android:id="@+id/time1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="dfjdhkedfh"
        android:textColor="@color/white"></TextView>
    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="dfjdhkedfh"
        android:textColor="@color/white"></TextView>
    <Button
        android:id="@+id/select1"
        android:layout_width="120dp"
        android:layout_height="30dp"

        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="select the report"
        android:textSize="15dp"

        android:background="@color/sara"
        ></Button>
    <Button
        android:id="@+id/cencle1"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:hint="cancle"
        android:textSize="15dp"

        android:background="@color/sara"
        ></Button>


    <TextView
        android:id="@+id/did"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/white"></TextView>

    <TextView
        android:id="@+id/yesb"
        android:textColor="@color/junior"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
       android:text="tt"
        android:textColorHint="@color/junior"
        android:clickable="true"
        android:textSize="25dp"


        ></TextView>




</LinearLayout>